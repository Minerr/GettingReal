<Window x:Class="WpfApp1.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="UserWindow" Height="600" Width="800">
    <Grid>
        <Button Content="Show Pending Permission Requests" 
                FontSize="24"
                HorizontalAlignment="Left" 
                Margin="60,100,0,0" 
                VerticalAlignment="Top" 
                Width="379"
                Click="ShowAllConsents"/>
        
        <Button Content="Show Active Consents" 
                FontSize="24"
                HorizontalAlignment="Left" 
                Margin="60,200,0,0" 
                VerticalAlignment="Top" 
                Width="379"
                Click="ShowAllConsents"/>
        
        <Button Content="Revoke Consent" 
                FontSize="24"
                HorizontalAlignment="Left" 
                Margin="60,300,0,0" 
                VerticalAlignment="Top" 
                Width="379"
                Click="RevokeConsent"/>

    </Grid>
</Window>
