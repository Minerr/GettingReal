                <WrapPanel>
                    <TextBlock Foreground="Blue">Support</TextBlock>
                    <TextBlock Foreground="Red"><Run Text="Menu"/></TextBlock>
                </WrapPanel>
            </Button.Content>
        </Button>

    </Grid>
</Window>
